{
  "name": "dsp-repository-e2e",
  "version": "1.0.0",
  "description": "End-to-end testing for DSP Repository design system",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:functional": "playwright test --config=playwright.config.ts",
    "test:visual": "playwright test --config=playwright-visual.config.ts",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:list": "playwright test --list",
    "test:report": "playwright show-report",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:visual:update": "playwright test --config=playwright-visual.config.ts --update-snapshots",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "playwright:install": "playwright install",
    "playwright:codegen": "playwright codegen http://localhost:3400"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.1",
    "@types/node": "^24.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.1",
    "typescript": "^5.8.3"
  }
}
