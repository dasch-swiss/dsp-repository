        "Geonames",
        "Pleiades",
        "Skos",
        "Periodo",
        "Chronontology",
        "GND",
        "VIAF",
        "Grid",
        "ORCID",
        "Creative Commons",
        "COAR",
        "ROR",
        "DOI",
        "ARK",
        "URL"
